@model Miss.Models.Location

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h4 {
        margin-top: 16px;
    }

    .control-label {
        font-weight: bold;
    }

    .form-group input[type=text], .form-group input[type=date] {
